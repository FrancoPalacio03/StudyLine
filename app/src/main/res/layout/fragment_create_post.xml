<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.CreatePostFragment">

    <!-- Título de la publicación -->
    <TextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Publicación"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cuadro de texto para el título -->
    <EditText
        android:id="@+id/title_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Escribe el título aquí..."
        android:inputType="text"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_title" />

    <!-- Selector de universidad -->
    <Spinner
        android:id="@+id/testSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_input" />

    <!-- Cuadro de texto para la publicación -->
    <EditText
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="Escribe tu publicación..."
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:background="@android:color/transparent"
        android:alpha="0.8"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testSelect"
        app:layout_constraintBottom_toTopOf="@id/upload_section" />

    <!-- Sección para subir archivos -->
    <LinearLayout
        android:id="@+id/upload_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_text">

        <!-- Botón para seleccionar archivos -->
        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir archivo"
            android:layout_marginEnd="16dp" />

        <!-- Texto que indica los archivos seleccionados -->
        <TextView
            android:id="@+id/selected_file_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Archivos seleccionados: 0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Sección de fotos -->
    <LinearLayout
        android:id="@+id/photo_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upload_section">

        <ImageView
            android:id="@+id/photo_select"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Subir foto"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_addphoto" />
    </LinearLayout>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/loading_circle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/post_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de publicación -->
    <Button
        android:id="@+id/post_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_section"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
