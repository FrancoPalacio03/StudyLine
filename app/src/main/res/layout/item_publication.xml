<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado: Título y Fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="4dp"
                android:text="Título Publicación"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Fecha"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <!-- Usuario -->
        <Button
            android:id="@+id/btnUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="sans-serif"
            android:paddingVertical="4dp"
            android:text="Usuario"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/postDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="Descripción" />

        <!-- Archivos (Placeholder para imágenes o enlaces) -->
        <LinearLayout
            android:id="@+id/allFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivos"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <!-- Interacciones: Comentarios, Likes, y Dislikes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <!-- Botón de Comentarios -->
            <ImageView
                android:id="@+id/btnComments"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Comentarios"
                android:src="@drawable/icon_comment" />

            <!-- Likes -->
            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Like"
                android:src="@drawable/icon_like" />

            <!-- Dislikes -->
            <ImageView
                android:id="@+id/btnDislike"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Dislike"
                android:src="@drawable/icon_dislike" />

            <!-- Nuevo Comentario -->
            <ImageView
                android:id="@+id/btnNewComment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Nuevo Comentario"
                android:src="@drawable/icon_newcomment" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

