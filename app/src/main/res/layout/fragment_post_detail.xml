<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Detalles de la publicación -->

    <!-- Encabezado: Título y Fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/post_detail_title"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4dp"
            android:text="Título Publicación"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/post_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Fecha"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/post_detail_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="sans-serif"
        android:paddingVertical="4dp"
        android:text="Materia"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/post_detail_description"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingVertical="8dp"
        android:text="Descripción" />

    <!-- Archivos subidos -->
    <LinearLayout
        android:id="@+id/filesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"/>

    <!-- Interacciones: Comentarios, Likes, y Dislikes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/postCountLike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="Num"
            android:gravity="center"/>

        <!-- Likes -->
        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Like"
            android:src="@drawable/icon_like" />

        <TextView
            android:id="@+id/postCountDislike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:text="Num"
            android:gravity="center"/>

        <!-- Dislikes -->
        <ImageView
            android:id="@+id/btnDislike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Dislike"
            android:src="@drawable/icon_dislike" />
    </LinearLayout>

    <!-- Comentarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <!-- Entrada de comentarios y botón al final -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:layout_gravity="bottom">

        <EditText
            android:id="@+id/comment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe un comentario..." />

        <Button
            android:id="@+id/add_comment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar comentario"
            />
    </LinearLayout>
</LinearLayout>


